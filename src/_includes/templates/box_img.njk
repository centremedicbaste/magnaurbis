<section class=" herohome inview  o-hidden   bg-hero  height-full  " data-scroll-section>
  <div class="video-bg">
    {% if global.home_image %}
      {% if global.home_image.endsWith('.mp4') %}
      <video poster="" autoplay="" muted="" loop="">
        <source src="{{ global.home_image }}" type="video/mp4" />
      </video>
      {% else %}
      <img class="parallax-image" data-scroll data-scroll-speed="-3"  src="/assets/static/images/casa2.webp" alt="">

      {% endif %}
    {% endif %}
  </div>
  <div class=" container-global mx-auto    ">
    <div class="row section-x  align-middle  height-full content-end  ">
      <div class="col-xs-9 col-md-5 col-lg-5   ">

      </div>

<div class="col-xs-12 col-md-1 col-lg-1 "></div>

      <div class="col-xs-6 col-md-6 col-lg-6 front-text ">

        <div class="box-frost text-left p-24 ">



          <div class="fluid-5-l mb-32 animate-word" data-delay="0">

            {{box_img_title}}
         
          </div>
          <div class="fluid-8-r mb-16 animate-word" data-delay="1">
     
          
            {{box_img_description}}
          </div>

            <div class="fluid-9-r mb-16 animate-word" data-delay="2">
        
            
              {{box_img_description2}}
            </div>
      

      <div class="animate-box2 mb-32 mt-64" data-delay="3">
        <a href="#contacta" >
          <button type="button" class="btn-primary btn--big btn ">
            {{hero_btn}}
          </button>
        </a>
      </div>


      {# <div class="content-middle mb-16 animate-box" data-delay="2">
        <div class="fluid-9-b">Excelente</div><img width="100px" class=""
          src="https://storage.googleapis.com/landing-strapi-v4/assets/svg/stars-giFRggf5fPfNiJXB7To2fd.svg"
